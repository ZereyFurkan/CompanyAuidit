@model UserViewModel
@{
    ViewData["Title"] = "SaveUser";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    <script>
        function showAlert() {
            alert("Kullanıcı başarıyla eklandi");
        }
    </script>
}

<!DOCTYPE html>


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<div class="box">
    <form asp-controller="User" asp-action="SaveUser" method="post">
        <h3>Eleman Ekle</h3>
        <div class="input-container">

            <input asp-for="@Model.FirstName" required="" placeholder="İsim" />

        </div>
        <div class="input-container">

            <input asp-for="@Model.LastName" required="" placeholder="Soyisim" />

        </div>
        <div class="input-container">

            <input asp-for="@Model.Department" required="" placeholder="Birim" />

        </div>
        <div class="input-container">

            <input asp-for="@Model.Mission" required="" placeholder="Görev" />

        </div>
        <button type="submit" class="btn btn-success" onclick="showAlert();">Kaydet</button>
        <button type="submit" asp-action="SaveUser2" class="btn btn-primary" onclick="showAlert();">Kaydet ve GeriDön</button>
        <button class="btn btn-warning" asp-action="UserList" >Vazgeç</button>
        
    </form>
</div>