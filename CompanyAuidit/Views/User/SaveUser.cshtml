@model UserViewModel
@{
    ViewData["Title"] = "SaveUser";
    Layout = null;
}

<!DOCTYPE html>


<link rel="stylesheet" href="~/css/PrivateCss.css" />

<div class="box">
    <form asp-controller="User" asp-action="SaveUser" method="post">
        <span class="text-center">Eleman Kaydı</span>
        <div class="input-container">
            <input asp-for="@Model.FirstName" required="" />
            <label>İsim</label>
        </div>
        <div class="input-container">
            <input asp-for="@Model.LastName" required=""  />
            <label>Soyisim</label>
        </div>
        <div class="input-container">
            <input asp-for="@Model.Department" required="" />
            <label>Birim</label>
        </div>
        <div class="input-container">
            <input asp-for="@Model.Mission" required="" />
            <label>Görev</label>
        </div>
        <button type="submit" class="btn">Kaydet</button>
    </form>
</div>