@model UserViewModel
@{
    ViewData["Title"] = "SaveUser";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<div class="box">
    <form asp-controller="User" asp-action="SaveUser" method="post">
        <span class="text-center">Eleman Kaydı</span>
        <div class="input-container">
            
            <input asp-for="@Model.FirstName" required="" placeholder="İsim" />

        </div>
        <div class="input-container">
            
            <input asp-for="@Model.LastName" required="" placeholder="Soyisim" />

        </div>
        <div class="input-container">
            
            <input asp-for="@Model.Department" required="" placeholder="Birim"/>

        </div>
        <div class="input-container">
            
            <input asp-for="@Model.Mission" required="" placeholder="Görev" />

        </div>
        <button type="submit" class="btn">Kaydet</button>
        <button class="btn" href="/Home/Index">Ana Sayfa</button>
    </form>
</div>