@model InventoryViewModel
@{
    ViewData["Title"] = "SaveInventory";
    Layout = null;
}

<!DOCTYPE html>


<link rel="stylesheet" href="~/css/PrivateCss.css" />

<div class="box">
    <form asp-controller="Inventory" asp-action="SaveInventory" method="post">
        <span class="text-center">Eleman Kaydı</span>
        <div class="input-container">
            <input asp-for="@Model.Name" required="" />
            <label>Adı</label>
        </div>
        <div class="input-container">
            <input asp-for="@Model.Status" required=""  />
            <label>Durum</label>
        </div>
        <div class="input-container">
            <input asp-for="@Model.Cost" required="" />
            <label>Değer</label>
        </div>
       
        <button type="submit" class="btn">Kaydet</button>
        <button class="btn" href="/Home/Index">Ana Sayfa</button>
    </form>
</div>